{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "DATABASE_URL"],
  "globalDependencies": [".env", "test.ts", "./migrations"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".next/cache/**"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "install": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start:prod": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "apply-migration": {}
  }
}
