{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [".env", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [""]
    },
    "start": {},
    "install": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start:prod": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL"]
    }
  }
}
