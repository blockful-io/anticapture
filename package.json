{
  "name": "defendao",
  "version": "1.0.0",
  "description": "DefenDAO Monorepo",
  "scripts": {
    "start": "dotenv -- turbo start",
    "build": "dotenv -- turbo build",
    "build:server": "dotenv -- turbo run build --filter=@defendao/server",
    "dev:server": "dotenv -- turbo run dev --filter=@defendao/server",
    "install:dashboard": "cd ./apps/dashboard && npm install",
    "install:indexer": "cd ./apps/indexer && npm install",
    "install:server": "cd ./apps/server && npm install",
    "start:server": "dotenv -- turbo run start:prod --filter=@defendao/server",
    "start:indexer": "dotenv -- turbo run start --filter=@defendao/indexer"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@defendao/indexer": "./apps/indexer",
    "@defendao/server": "./apps/server",
    "turbo": "^2.3.1"
  },
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "dotenv-cli": "^7.4.4"
  }
}
