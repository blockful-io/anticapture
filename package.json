{
  "name": "anticapture",
  "version": "0.3.1",
  "description": "Anticapture Monorepo",
  "scripts": {
    "start": "dotenv -- turbo start",
    "build": "dotenv -- turbo build",
    "build:dashboard": "dotenv -- turbo run build --filter=@anticapture/dashboard",
    "dev:indexer": "dotenv -- turbo run dev --filter=@anticapture/indexer",
    "dev:dashboard": "dotenv -- turbo run dev --filter=@anticapture/dashboard",
    "start:dashboard": "dotenv -- turbo run start --filter=@anticapture/dashboard",
    "start:indexer": "dotenv -- turbo run start --filter=@anticapture/indexer",
    "start:server": "dotenv -- turbo run serve --filter=@anticapture/indexer",
    "serve:indexer": "dotenv -- turbo run serve --filter=@anticapture/indexer",
    "start:indexer-metrics": "dotenv -- turbo run start --filter=@anticapture/indexer-metrics",
    "prepare": "husky"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "@types/node": "^20.16.5",
    "turbo": "^2.3.1",
    "husky": "^9.1.6",
    "dotenv-cli": "^7.4.4",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0"
  }
}
